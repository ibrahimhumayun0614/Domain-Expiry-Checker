{
    "manifest_version": 3,
    "name": "Domain Expiry Checker",
    "version": "1.0",
    "description": "Instantly check domain and SSL certificate expiry dates and days remaining.",
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Check Domain Expiry"
    }
}